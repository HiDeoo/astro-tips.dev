---
const stats: Array<{
  stat: string;
  label: string;
}> = [
  {
    stat: "5",
    label: "Tips",
  },
  {
    stat: "3",
    label: "Articles",
  },
  {
    stat: "0",
    label: "Stars",
  },
  {
    stat: "2",
    label: "Authors",
  },
];
---

<section class="max-w-6xl mx-auto py-24">
  <div class="grid grid-cols-2 gap-8">
    <div class="flex flex-col items-start justify-center">
      <span
        class="inline-block mb-2 text-base font-medium px-3 py-1 rounded-full bg-primary-100 text-primary-700 dark:bg-primary-900 dark:text-primary-200"
      >
        Unofficial
      </span>
      <h1
        class="text-5xl text-gray-950 dark:text-gray-50 font-bold tracking-tight inline-flex items-center"
      >
        Tips for Astro
      </h1>
      <p class="text-lg mt-4">The place for tips that don't fit the docs.</p>
      <div class="mt-6 flex space-x-4">
        <a
          href="https://github.com/florian-lefebvre/astro-tips.dev"
          class="button button-gray"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
            ><path
              fill="none"
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 5h8m-8 4h5m-5 6h8m-8 4h5M3 5a1 1 0 0 1 1-1h4a1 1 0 0 1 1 1v4a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1zm0 10a1 1 0 0 1 1-1h4a1 1 0 0 1 1 1v4a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1z"
            ></path></svg
          >
          <span>View tips</span>
        </a>
        <a
          href="https://github.com/florian-lefebvre/astro-tips.dev"
          class="button button-primary"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
            ><path
              fill="currentColor"
              d="M12 .297c-6.63 0-12 5.373-12 12c0 5.303 3.438 9.8 8.205 11.385c.6.113.82-.258.82-.577c0-.285-.01-1.04-.015-2.04c-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729c1.205.084 1.838 1.236 1.838 1.236c1.07 1.835 2.809 1.305 3.495.998c.108-.776.417-1.305.76-1.605c-2.665-.3-5.466-1.332-5.466-5.93c0-1.31.465-2.38 1.235-3.22c-.135-.303-.54-1.523.105-3.176c0 0 1.005-.322 3.3 1.23c.96-.267 1.98-.399 3-.405c1.02.006 2.04.138 3 .405c2.28-1.552 3.285-1.23 3.285-1.23c.645 1.653.24 2.873.12 3.176c.765.84 1.23 1.91 1.23 3.22c0 4.61-2.805 5.625-5.475 5.92c.42.36.81 1.096.81 2.22c0 1.606-.015 2.896-.015 3.286c0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"
            ></path></svg
          >
          <span>GitHub</span>
        </a>
      </div>
    </div>
    <dl
      class="grid grid-cols-1 gap-0.5 overflow-hidden rounded-2xl text-center sm:grid-cols-2 bg-gray-200 border-2 border-gray-200 dark:bg-gray-700 dark:border-gray-700"
    >
      {
        stats.map(({ stat, label }) => (
          <div class="flex flex-col bg-gray-100 dark:bg-gray-900 p-8">
            <dt class="text-sm font-semibold leading-6 text-gray-700 dark:text-gray-300">
              {label}
            </dt>
            <dd class="order-first text-3xl font-semibold tracking-tight text-gray-950 dark:text-gray-50 font-mono">
              {stat}
            </dd>
          </div>
        ))
      }
    </dl>
  </div>
</section>
